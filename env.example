# Security Configuration
ADMIN_USERNAME=its_raees
ADMIN_PASSWORD=Morih@srat41471
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here

# Database (if applicable)
DATABASE_URL=postgresql://user:password@localhost:5432/raees_visuals

# External Services
SNYK_TOKEN=your-snyk-token-here
SENTRY_DSN=your-sentry-dsn-here

# File Upload Security
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/webm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
CSP_NONCE_SECRET=your-csp-nonce-secret

# Monitoring
LOG_LEVEL=info
ENABLE_SECURITY_LOGGING=true

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_RETENTION_DAYS=30

# Production Settings
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://www.raeesvisuals.com

# Sanity (required for web)
NEXT_PUBLIC_SANITY_PROJECT_ID=st67411b
NEXT_PUBLIC_SANITY_DATASET=production
# Sanity API Token (required for write operations - get from https://www.sanity.io/manage)
# Token needs "Editor" permissions to update product metadata
SANITY_API_TOKEN=your-sanity-api-token-here

# Cloudflare R2 (for product downloads)
# Either set R2_ENDPOINT directly, or set R2_ACCOUNT_ID (endpoint will be auto-generated)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=raees-assets